<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_xaml.Views.Triggers.TriggerEventPage"
             xmlns:local="clr-namespace:maui_xaml.Views.Triggers"
             Title="TriggerEventPage">
    <VerticalStackLayout>
        <Button Text="Hi Trigger" BackgroundColor="#A569BD" TextColor="White">
            <Button.Triggers>
                <EventTrigger Event="Clicked">
                    <local:TriggerEventSample />
                </EventTrigger>
            </Button.Triggers>
        </Button>
    </VerticalStackLayout>
</ContentPage>